{
  "name": "acquia/blt",
  "description": "BLT",
  "type": "composer-plugin",
  "license": "GPL-2.0",
  "require": {
    "drupal/console":                   "~1",
    "phing/phing":                      "~2",
    "phpunit/phpunit":                  "~5.4",
    "squizlabs/php_codesniffer":        "^2.4",
    "symfony/yaml":                     "~2.7",
    "drupal/coder":                     "~8.2",
    "symfony/console":                  "~2",
    "symfony/twig-bridge": "~2",
    "php": ">=5.6",
    "composer-plugin-api": "^1.0.0"
  },
  "autoload": {
    "psr-4": {
      "Acquia\\Blt\\": "src/",
      "Acquia\\Blt\\Tests\\": "tests/phpunit/src/"
    }
  },
  "extra": {
    "class": "Acquia\\Blt\\Composer\\Plugin"
  },
  "bin": [
    "bin/blt",
    "bin/blt-console"
  ],
  "conflict": {
    "drupal/core": "7.*"
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "scripts": {
    "install-blt-alias": "blt install-alias -Dcreate_alias=true"
  }
}
