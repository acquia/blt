#!/usr/bin/env bash

set -ev

#  The local.hostname must be set to localhost on probo CI.
$SRC_DIR/vendor/bin/yaml-cli update:value $SRC_DIR/blt/project.yml project.local.hostname 'localhost'

$SRC_DIR/vendor/bin/blt validate:all --define drush.alias='${drush.aliases.ci}' --define environment=ci --ansi
$SRC_DIR/vendor/bin/blt tests:all --define drush.alias='${drush.aliases.ci}' --define environment=ci -D tests.run-server=true -D behat.web-driver=chrome --yes -v --ansi

set +v
