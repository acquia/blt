#!/usr/bin/env bash

if [ "`git rev-parse --show-cdup 2> /dev/null`" != "" ]; then
  GIT_ROOT=$(git rev-parse --show-cdup)
else
  GIT_ROOT="."
fi

if [ -f "$GIT_ROOT/vendor/acquia/blt/bin/blt" ]; then
  cd $GIT_ROOT
  ./vendor/phing/phing/bin/phing -f "./vendor/acquia/blt/phing/build.xml" -logger vendor.acquia.blt.phing.phingcludes.BltLogger "$@"
else
  echo "Error: You must run this command from within a BLT-generated project repository!"
fi
